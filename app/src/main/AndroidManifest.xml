<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sarah.prospectsproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/team"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".controllers.activities.login.LoginActivity" />
        <activity
            android:name=".controllers.activities.prospects.ProspectsListDataBase"
            android:label="@string/title_activity_prospects_list_data_base"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".controllers.activities.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.activities.prospects.ProspectListActivity"
            android:label="@string/title_activity_prospect_list"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
    </application>

</manifest>